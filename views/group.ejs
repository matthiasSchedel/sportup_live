<%- include('partials/head') %>

<body>

  <!-- Navigation -->
  <%- include('partials/navbar') %>

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Sportup is great</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <strong><%= group.name %></strong>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="navbar">
            <a href="/group"><span class="nav-item"><i class="fa fa-arrow-circle-left"></i> Back to overview</span></a>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <section class="features-icons bg-light text-center showcase">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <img src="<%= group.picture %>" class="img-fluid" />
        </div>
        <div class="col-lg-6">
          <h2><%= group.name %></h2>
          <div class="mt-5 text-left">
            <h3>Trainer</h3>
            <ul class="list-group">
              <% for(var i=0; i<group.trainers.length; i++) {%>
              <li class="list-group-item"><i class="fa fa-user"></i> <%= group.trainers[i].name %></li>
              <li class="list-group-item"><i class="fa fa-user"></i> Kai</li>
              <% } %>
            </ul>
          </div>
          <div class="mt-5 text-left">
            <h3>Teilnehmer</h3>
            <i class="fa fa-id-card"></i> <%= group.participants.length %>
          </div>
        </div>
      </div>
      <div class="row">

      </div>
    </div>
    <hr />
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-9 text-left">
          <h3>Beschreibung</h3>
          <p><%= group.description %></p>
        </div>
        <div class="col-12 col-md-9 mb-2 mb-md-0 col-lg-3 float-lg-right">
          <form action="" method="POST">
            <button type="submit" class="btn btn-block btn-lg btn-primary">
              <%- isJoined ? 'Gruppe verlassen' : 'Gruppe beitreten' %>
            </button>
          </form>
        </div>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-9 text-left">
          <h3>Events</h3>
        </div>
        <%- include('partials/createAndUpdateEvent-form') %>
        <div class="col-12 col-lg-9 text-left">
          <h5>Events</h5>
        </div>
        <div class="row">
            <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
              <div class="MultiCarousel-inner">
                <% if (locals.group.events) { %>
                <% for(var i=0; i<group.events.length; i++) {%>
                <div class="item">
                  <div class="pad15">
                    <a href="/events/<%- encodeURI(group.events[i].id) %>">
                      <div>
                        <h5><%= group.events[i].name %></h5>
                      </div>
                    </a>
                    <p>Start: <%= moment(group.events[i].startDate).locale('de').format('L LT') %>
                    <p><%= group.events[i].description %></p>
                    <img src="<%= group.events[i].picture %>" class="img-thumbnail"></i>
                  </div>
                </div>
                <% } %>
                <% } %>
              </div>
              <button class="btn btn-primary leftLst">
                <i class="fa fa-chevron-left"></i> </button>
              <button class="btn btn-primary rightLst"><i class="fa fa-chevron-right"></i></button>
            </div>
          </div>
        <div class="col-12 col-md-9 mb-2 mb-md-0 col-lg-3 float-lg-right">
          <form action="" method="POST">
              <button type="submit" class="btn btn-block btn-lg btn-primary">
              <%- isJoined ? 'Gruppe verlassen' : 'Gruppe beitreten' %>
              </button>
          </form>
        </div>

        
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>
  <script src="js/carousel.js"></script>
</body>

</html>