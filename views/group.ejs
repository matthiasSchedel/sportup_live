<%- include('partials/head') %>

<body>

  <!-- Navigation -->
  <%- include('partials/navbar') %>

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Sportup is great</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <strong><%= group.name %></strong>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="navbar">
            <a href="/group"><span class="nav-item"><i class="fa fa-arrow-circle-left"></i> Back to overview</span></a>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <section class="features-icons bg-light text-center showcase">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <img src="<%= group.picture %>" class="img-fluid" />
        </div>
        <div class="col-lg-6">
          <h2><%= group.name %></h2>
          <div class="mt-5 text-left">
            <h3>Trainer</h3>
            <ul class="list-group">
              <% for(var i=0; i<group.trainers.length; i++) {%>
              <li class="list-group-item"><i class="fa fa-user"></i> <%= group.trainers[i].name %></li>
              <li class="list-group-item"><i class="fa fa-user"></i> Kai</li>
              <% } %>
            </ul>
          </div>
          <div class="mt-5 text-left">
            <h3>Teilnehmer</h3>
            <i class="fa fa-id-card"></i> <%= group.participants.length %>
          </div>
        </div>
      </div>
      <div class="row">

      </div>
    </div>
    <hr />
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-9 text-left">
          <h3>Beschreibung</h3>
          <p><%= group.description %></p>
        </div>
        <div class="col-12 col-md-9 mb-2 mb-md-0 col-lg-3 float-lg-right">
          <form action="" method="POST">
            <button type="submit" class="btn btn-block btn-lg btn-primary">
              <%- isJoined ? 'Gruppe verlassen' : 'Gruppe beitreten' %>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
          <ul class="list-inline mb-2">
            <li class="list-inline-item">
              <a href="#">About</a>
            </li>
            <li class="list-inline-item">&sdot;</li>
            <li class="list-inline-item">
              <a href="#">Contact</a>
            </li>
            <li class="list-inline-item">&sdot;</li>
            <li class="list-inline-item">
              <a href="#">Terms of Use</a>
            </li>
            <li class="list-inline-item">&sdot;</li>
            <li class="list-inline-item">
              <a href="#">DSGVO</a>
            </li>
          </ul>
          <p class="text-muted small mb-4 mb-lg-0">&copy; Your Website 2019. All Rights Reserved.</p>
        </div>
        <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
          <ul class="list-inline mb-0">
            <li class="list-inline-item mr-3">
              <a href="#">
                <i class="fab fa-facebook fa-2x fa-fw"></i>
              </a>
            </li>
            <li class="list-inline-item mr-3">
              <a href="#">
                <i class="fab fa-twitter-square fa-2x fa-fw"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <i class="fab fa-instagram fa-2x fa-fw"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>