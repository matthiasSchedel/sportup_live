<%- include('partials/head') %>


<body class="bg-gradient-primary">

  <!-- Navigation -->
  <%- include('partials/navbar') %>


  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row-lg-12">
              <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->
              <div class="col-lg-2">

              </div>
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Willkommen!</h1>
                  </div>
                  <form class="user" action="/signup" method="post">
                    <div class="form-group">
                      <input type="text" name="text" class="form-control form-control-user" id="exampleInputName"
                        aria-describedby="nameHelp" placeholder="Name">
                    </div>
                    <div class="form-group">
                      <input type="email" name="email" class="form-control form-control-user" id="exampleInputEmail"
                        aria-describedby="emailHelp" placeholder="E-Mail Adresse">
                    </div>
                    <div class="form-group">
                      <input type="password" name="password" class="form-control form-control-user"
                        id="exampleInputPassword" placeholder="*******">
                    </div>
                    <div class="form-group">
                      <fieldset>
                        <!-- <legend>User Type</legend> -->
                        <p>
                          <label>Ich bin</label>
                          <select id="myList" name="userType" class="form-control form-control-user">
                            <option value="1">Teilnehmer</option>
                            <option value="2">Trainer</option>
                            <option value="3">Beides</option>
                          </select>
                        </p>
                      </fieldset>
                    </div>
                    <div class="form-group">
                      <input required type="checkbox" name="checkbox" class="" id="exampleInputCheckbox"> Hiermit
                      bestätige ich
                      das ich die <a href="/dsgvo"> Datenschutz Bedingungen</a> aktzeptiere.

                    </div>
                    <div class="form-group">
                      <input type="submit" value="Registrieren" class="btn btn-primary btn-user btn-block" />
                    </div>

                  </form>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="/">Zurück</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>
  <%- include('partials/footer') %>

</body>

</html>