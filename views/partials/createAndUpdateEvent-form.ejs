<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Event hinzufügen
</button>

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Event hinzufügen</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action="/events" method="post">
                    <div class="form-group row">
                        <label class="col-4">Event Name</label>
                        <div class="col-8">
                            <input id="name" name="name" type="text" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-datetime-local-input" class="col-2 col-form-label">Event Start</label>
                        <div class="col-10">
                            <input class="form-control" id="startDate" value="2020-03-10T13:45:00" name="startDate"
                                type="datetime-local" id="example-datetime-local-input">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-datetime-local-input" class="col-2 col-form-label">Event Ende</label>
                        <div class="col-10">
                            <input class="form-control" id="endDate" value="2020-03-10T14:45:00" name="endDate"
                                type="datetime-local" id="example-datetime-local-input">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Beschreibung</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>

                    <% if (locals.group) { %>
                    <div style="display: none;" class="form-group">
                        <label for="description">Gruppe</label>
                        <input id="groupId" name="groupId" type="number" class="form-control"><%= group._id %></input>
                    </div>
                    <% } %>

                    <div class="form-group row">
                        <div class="offset-4 col-8">
                            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer-->
            <!-- <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div> -->

        </div>
    </div>
</div>