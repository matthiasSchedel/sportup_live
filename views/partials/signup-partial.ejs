<!-- Masthead -->
<header class="masthead">
  <div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center text-center">
      <div class="col-lg-10 align-self-end">
        <hr class="divider my-4">
      </div>
      <div class="col-lg-8 align-self-baseline">
        <!--          <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More</a>-->
        <div class="text-center"
          style="background-color: rgb(255, 252, 241); padding: 10px; margin-bottom: -25px; border-radius: 12px;;">
          <h1 class=" h4 text-gray-900 mb-4">Jetzt anmelden!</h1>
        </div>
        <form style="background-color: rgb(255, 252, 241); padding: 35px; border-radius: 25px;" class="user"
          action="/signup" method="post">
          <div class="form-group">
            <input required type="text" name="name" class="form-control form-control-user" id="exampleInputName"
              aria-describedby="nameHelp" placeholder="Name">
          </div>
          <div class="form-group">
            <input required type="email" name="email" class="form-control form-control-user" id="exampleInputEmail"
              aria-describedby="emailHelp" placeholder="E-Mail Adresse">
          </div>
          <div class="form-group">
            <input required type="password" name="password" class="form-control form-control-user"
              id="exampleInputPassword" placeholder="*******">
          </div>
          <div class="form-group">
            <fieldset>
              <!-- <legend>User Type</legend> -->
              <p>
                <label>Ich bin</label>
                <select id="myList" name="userType" class="form-control form-control-user">
                  <option value="1">Teilnehmer</option>
                  <option value="2">Trainer</option>
                  <option value="3">Beides</option>
                </select>
              </p>
            </fieldset>
          </div>
          <div class="form-group">
            <input required type="checkbox" name="checkbox" class="" id="exampleInputCheckbox"> Hiermit
            best√§tige ich
            das ich die <a href="/dsgvo"> Datenschutz Bedingungen</a> aktzeptiere.

          </div>
          <div class="form-group">
            <input type="submit" value="Registrieren" class="btn btn-primary btn-user btn-block" />
          </div>

        </form>
      </div>
    </div>
  </div>
</header>